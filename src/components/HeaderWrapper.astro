---
import Dropdown from "./Dropdown";

const { title } = Astro.props;
---
<header class="flex items-center justify-between py-4 max-w-3xl mx-auto px-4">
  <h1 class="text-2xl font-bold">
    <a
      href="/"
      class="hover:no-underline"
      aria-label={title}
      title={title}
    >
      {title}
    </a>
  </h1>
  <nav>
    <div class="sm:hidden block">
      <Dropdown client:idle direction="right" icon="FaBars">
        <slot/>
      </Dropdown>
    </div>
    <div class="hidden sm:block">
      <slot/>
    </div>
  </nav>
</header>