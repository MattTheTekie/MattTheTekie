---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main class="mb-12 max-w-3xl mx-auto px-4">
      <h1 class="text-3xl font-bold mb-8 mt-8 px-4 py-2 bg-blue-600 w-fit">
        404 - Page not found!
      </h1>
      <p class="text-lg mb-8 text-justify">
      <div class="w-full justify-center flex py-10">
        <img src="/404.svg" alt="404" class="w-2/3" />
      </div>
    </main>
  </body>
  <Footer/>
</html>